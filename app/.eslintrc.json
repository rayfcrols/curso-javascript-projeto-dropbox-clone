{
  "env": {
    "commonjs": true,
    // "firebase": true,
    "es6": true,
    "browser": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "prettier/prettier": "error",
    "class-methods-use-this": "off",
    "no-unused-vars": ["error", { "argsIgnorePattern": "next" }]
  }
}
